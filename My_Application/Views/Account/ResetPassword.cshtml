@model ViewModels.Account.ResetPasswordViewModel

@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "تغییر رمز عبور";
}

<form class="needs-validation" asp-controller="Account" asp-action="ResetPassword"
    asp-route-returnurl="@ViewData["returnUrl"]" method="POST" novalidate>
    <div class="text-center text-danger" asp-validation-summary="ModelOnly"></div>

    <img class="mb-4" src="~/svg/Resetpassword.svg" alt="" width="72" height="57">

    <h1 class="h3 mb-3 fw-normal">ایجاد رمز عبور جدید</h1>
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="text-danger">@ViewData["ErrorMessage"]</div>
    }

    <div class="form-floating">
        <input asp-for="Password" class="form-control" placeholder="password" autocomplete="off" spellcheck="false" required>
        <label asp-for="Password">رمز عبور</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <div class="invalid-feedback">
            <p>
                رمز عبور خود را وارد کنید
            </p>
        </div>
    </div>

    <div class="form-floating input-margin">
        <input asp-for="ConfirmPassword" class="form-control" autocomplete="off" spellcheck="false" required>
        <label asp-for="ConfirmPassword">تکرار رمز عبور</label>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Username" class="form-control" />
    <input type="hidden" asp-for="Token" class="form-control" />

    <button class="w-100 btn btn-lg btn-primary" type="submit">تأیید</button>

</form>

@section Scripts{
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
