@model ViewModels.Account.ResetPasswordViewModel

@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "تغییر رمز عبور";
}

<form asp-controller="Account" asp-action="ResetPassword" asp-route-returnurl="@ViewData["returnUrl"]" method="POST">
    <div asp-validation-summary="ModelOnly"></div>

    <img class="mb-4" src="~/svg/Resetpassword.svg" alt="" width="72" height="57">

    <h1 class="h3 mb-3 fw-normal">ایجاد رمز عبور جدید</h1>
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="text-danger">@ViewData["ErrorMessage"]</div>
    }

    <div class="form-floating">
        <input asp-for="Password" class="form-control" placeholder="name@example.com">
        <label asp-for="Password">رمز عبور</label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-floating input-margin">
        <input asp-for="ConfirmPassword" class="form-control">
        <label asp-for="ConfirmPassword">تکرار رمز عبور</label>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Username" class="form-control" />
    <input type="hidden" asp-for="Token" class="form-control" />

    <button class="w-100 btn btn-lg btn-primary" type="submit">تأیید</button>

    <p class="mt-5 mb-3 text-muted">&copy; 2020–2021 Arvinmoj</p>
</form>

@section Scripts{
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
