@model ViewModels.Account.RegisterViewModel

@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "ثبت نام";
}

<form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["returnUrl"]" method="POST">
    <div asp-validation-summary="ModelOnly"></div>

    <img class="mb-4" src="~/svg/Register.svg" alt="" width="72" height="57">

    <h1 class="h3 mb-3 fw-normal">ثبت نام در سایت</h1>
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="text-danger">@ViewData["ErrorMessage"]</div>
    }

    <div class="form-floating">
        <input asp-for="Username" class="form-control" placeholder="name@example.com">
        <label asp-for="Username">نام کاربری</label>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-floating input-margin">
        <input asp-for="Email" class="form-control" placeholder="name@example.com">
        <label asp-for="Email">پست الکترونیک</label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-floating input-margin">
        <input asp-for="Password" class="form-control" placeholder="Password">
        <label asp-for="Password">رمز عبور</label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="ConfirmPassword" class="form-control" placeholder="Password">
        <label asp-for="ConfirmPassword">تکرار رمز عبور</label>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button class="w-100 fs-6 btn btn-lg btn-primary" type="submit">ثبت نام</button>

    <a class="w-100 fs-6 btn btn-lg btn-success input-margin" asp-controller="Home" asp-action="Index">صفحه اصلی</a>

</form>

@section Scripts{
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}