@model IEnumerable<Models.ReplacementHeater>

@{
    ViewData["Title"] = "Index";
}

<br>
<div class="container">
    <h3>تعویض بخاری</h3>
    <p>
        <a class="btn btn-success" asp-action="Create">ایجاد</a>
    </p>
</div>

<br />

<div class="container mb-3">
    <table class="table table-striped table-border mydatatable" style="width: 100%;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.HeaterInstalledType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NameCEO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HeaterScrapType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Capacity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HeaterScrapSerialNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HeaterInstalledSerialNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InstallationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InstallationTime)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HeaterInstalledType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameCEO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HeaterScrapType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Capacity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HeaterScrapSerialNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HeaterInstalledSerialNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InstallationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InstallationTime)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">تغییرات</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">جزئیات</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>