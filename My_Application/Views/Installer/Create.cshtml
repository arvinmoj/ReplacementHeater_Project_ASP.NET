@model Models.Installer

@{
    Layout = "_CreateLayout";
    ViewData["Title"] = "ایجاد";
}

<h4 class="mb-3">نصاب</h4>
<hr class="my-4">
<form name="Installer" asp-controller="Installer" asp-action="Create" method="post" class="needs-validation" novalidate
    onsubmit="return Validate()">
    <div class="row g-3">
        <div class="text-center text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="col-6">
            <label asp-for="FullName" class="form-label"></label>
            <div class="input-group has-validation">
                <input name="FullName" asp-for="FullName" type="text" class="form-control" autocomplete="off"
                    spellcheck="false" required minlength="3" maxlength="20">
                <div class="invalid-feedback">
                    <span asp-validation-for="FullName"></span>
                </div>
            </div>
        </div>

        <div class="col-6">
            <label asp-for="InstallerUserName" class="form-label"></label>
            <div class="input-group has-validation">
                <input name="InstallerUserName" asp-for="InstallerUserName" type="text" class="form-control"
                    autocomplete="off" spellcheck="false" required minlength="3" maxlength="20">
                <div class="invalid-feedback">
                    <span asp-validation-for="InstallerUserName"></span>
                </div>
            </div>
        </div>

        <div class="col-6">
            <label asp-for="UserNumber" class="form-label"></label>
            <div class="input-group has-validation">
                <input name="UserNumber" asp-for="UserNumber" type="text" class="form-control" autocomplete="off"
                    spellcheck="false" required pattern="\d*" onkeyup="toEnglishNumber(this.value,'UserNumber');"
                    minlength="3" maxlength="20">
                @* <p id="demo" style="color:red"></p> *@
                <div class="invalid-feedback">
                    <span asp-validation-for="UserNumber"></span>
                </div>
            </div>
        </div>

        <div class="col-6">
            <label asp-for="NationalCode" class="form-label"></label>
            <div class="input-group has-validation">
                <input asp-for="NationalCode" type="text" class="form-control" autocomplete="off" spellcheck="false"
                    minlength="10" required maxlength="10" onkeyup="toEnglishNumber(this.value,'NationalCode');">
                <div class="invalid-feedback">
                    <span asp-validation-for="NationalCode"></span>
                </div>
            </div>
        </div>

        <div class="col-6">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <div class="input-group has-validation">
                <input asp-for="PhoneNumber" type="text" class="form-control" autocomplete="off" spellcheck="false"
                    required minlength="11" maxlength="11" pattern="\d*" onkeyup="toEnglishNumber(this.value,'PhoneNumber');">
                <div class="invalid-feedback">
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
            </div>
        </div>

        <div class="col-6">
            <label asp-for="MobileNumber" class="form-label"></label>
            <div class="input-group has-validation">
                <input asp-for="MobileNumber" type="text" class="form-control" autocomplete="off" spellcheck="false"
                    required minlength="11" maxlength="11" pattern="\d*" onkeyup="toEnglishNumber(this.value,'MobileNumber');">
                <div class="invalid-feedback">
                    <span asp-validation-for="MobileNumber"></span>
                </div>
            </div>
        </div>

        <div class="col-12">
            <label asp-for="Address" class="form-label"></label>
            <div class="input-group has-validation">
                <input asp-for="Address" type="text" class="form-control" autocomplete="off" spellcheck="false" required
                    minlength="10" maxlength="100">
                <div class="invalid-feedback">
                    <span asp-validation-for="Address"></span>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-4">

    <button class="w-100 btn btn-primary btn-lg" type="submit">ایجاد</button>

</form>

<script>
    function Validate() {

        var x = document.forms["Installer"]["UserNumber"].value;


        if (isNaN(x) || x.length < 1 || x.length > 3) {
            text = "Input Not Valid";
            document.getElementById('demo').innerHTML = text;

        }
        else {
            text = "Input Ok ."
            document.getElementById('demo').innerHTML = text;
        }

    }
</script>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
